<html>
  <head>
    <style>
      body {
        font-family: Arial, sans-serif;
        line-height: 1.6;
        color: #333;
      }
      .container {
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
      }
      .header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 20px;
        text-align: center;
      }
      .content {
        padding: 20px;
        background: #f9f9f9;
      }
      .stats {
        display: flex;
        justify-content: space-around;
        margin: 20px 0;
      }
      .stat {
        text-align: center;
      }
      .stat-number {
        font-size: 24px;
        font-weight: bold;
        color: #667eea;
      }
    </style>
  </head>
  <body>
    <div class='container'>
      <div class='header'>
        <h1>ðŸ“Š Your Daily Digest</h1>
      </div>
      <div class='content'>
        <h2>Hi {{name}},</h2>

        <div class='stats'>
          <div class='stat'>
            <div class='stat-number'>{{newJobs}}</div>
            <div>New Jobs</div>
          </div>
          <div class='stat'>
            <div class='stat-number'>{{savedJobs}}</div>
            <div>Saved Jobs</div>
          </div>
        </div>

        <h3>Top Matches Today:</h3>
        <ul>
          {{#each topMatches}}
            <li>{{this.title}} at {{this.company}} - {{this.score}}% match</li>
          {{/each}}
        </ul>

        <a
          href='{{dashboardUrl}}'
          style='display: block; text-align: center; padding: 10px; background: #667eea; color: white; text-decoration: none; border-radius: 5px;'
        >View Dashboard</a>
      </div>
    </div>
  </body>
</html>